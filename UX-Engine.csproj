<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Forge.UX</RootNamespace>
    <PlatformTarget>x86</PlatformTarget>
    <BaseOutputPath>$(SolutionDir)BUILD\Engines\UX</BaseOutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	<LangVersion>9.0</LangVersion>
	<Nullable>enable</Nullable>
	<Platforms>x86</Platforms>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(SolutionName)'=='S4ModdingFramework'">
      <ItemGroup>
        <ProjectReference Include="..\..\Forge\S4Forge.csproj">
        <HintPath>S4Forge.nasi</HintPath>
        </ProjectReference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="S4Forge" Version="*">
          <HintPath>S4Forge.nasi</HintPath>
        </PackageReference>
      </ItemGroup>
    </Otherwise>
  </Choose>

  <!--Tests:-->
  <ItemGroup>
    <Compile Remove="Tests\**" />
    <EmbeddedResource Remove="Tests\**" />
    <None Remove="Tests\**" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\Prefabs\Buttons\" />
  </ItemGroup>

</Project>
